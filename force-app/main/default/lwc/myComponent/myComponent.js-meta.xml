<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <isExposed>false</isExposed>
    <masterLabel>Hey Young World</masterLabel>
    <description>Add a special greeting to any page!</description>
    <targets>
        <target>lightning__AppPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage">
            <property
        name="name"
        type="String"
        label="Name"
        placeholder="Young World"
        description="Enter the name of the person you'd like to greet."
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
